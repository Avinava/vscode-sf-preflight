{
  "name": "sf-preflight",
  "displayName": "SF Preflight",
  "description": "Environment health checks and setup verification for Salesforce development",
  "version": "1.1.0",
  "publisher": "avidev9",
  "type": "module",
  "scripts": {
    "lint": "eslint src/**/*.js",
    "clean": "rm -rf release/*.vsix",
    "prebuild": "yarn clean",
    "build": "npx @vscode/vsce package --out release/",
    "package": "yarn build",
    "release": "yarn build && echo 'Package ready in release/ folder'"
  },
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "salesforce",
    "environment",
    "preflight",
    "health check",
    "setup"
  ],
  "activationEvents": [
    "workspaceContains:sfdx-project.json",
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Avinava/vscode-sf-preflight.git"
  },
  "icon": "assets/icon.png",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^9.13.0",
    "vscode": "^1.1.37"
  },
  "extensionDependencies": [
    "streetsidesoftware.code-spell-checker"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "SF Preflight",
      "properties": {
        "sfPreflight.runHealthCheckOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Run environment health check when VS Code starts"
        },
        "sfPreflight.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show environment status in the status bar"
        },
        "sfPreflight.provisioning.runOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Automatically run enabled provisioners (like Spell Checker) on project open"
        },
        "sfPreflight.provisioning.spellChecker": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic setup of Salesforce dictionary and spell checker settings"
        },
        "sfPreflight.provisioning.gitIgnore": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic creation of standard .gitignore if missing"
        },
        "sfPreflight.provisioning.prettier": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic creation of .prettierrc and .prettierignore if missing"
        },
        "sfPreflight.provisioning.editorConfig": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic creation of .editorconfig if missing"
        },
        "sfPreflight.provisioning.vscodeSettings": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic creation of .vscode/settings.json with standard exclusions if missing"
        },
        "sfPreflight.provisioning.templates.prettierrc": {
          "type": "object",
          "default": {
            "trailingComma": "none",
            "singleQuote": true,
            "printWidth": 120,
            "tabWidth": 2,
            "useTabs": false,
            "overrides": [
              {
                "files": "**/lwc/**/*.html",
                "options": {
                  "parser": "lwc"
                }
              },
              {
                "files": "*.{cmp,page,component}",
                "options": {
                  "parser": "html"
                }
              }
            ],
            "plugins": [
              "prettier-plugin-apex"
            ]
          },
          "description": "Template for .prettierrc"
        },
        "sfPreflight.provisioning.templates.prettierignore": {
          "type": "string",
          "editPresentation": "multilineText",
          "default": "# .prettierignore\n.sf/\n.sfdx/\n.localdevserver/\ndist/\nnode_modules/\ncoverage/\n.DS_Store\npackage-lock.json\n",
          "description": "Template for .prettierignore"
        },
        "sfPreflight.provisioning.templates.editorConfig": {
          "type": "string",
          "editPresentation": "multilineText",
          "default": "# EditorConfig is awesome: https://EditorConfig.org\n\n# top-most EditorConfig file\nroot = true\n\n[*]\nend_of_line = lf\ncharset = utf-8\ntrim_trailing_whitespace = true\ninsert_final_newline = true\nindent_style = space\nindent_size = 2\n\n[*.{cmp,page,component}]\nindent_style = space\nindent_size = 2\n\n[*.{html,js,json,md,ts,yaml,yml}]\nindent_style = space\nindent_size = 2",
          "description": "Template for .editorconfig"
        },
        "sfPreflight.provisioning.templates.vscodeSettings": {
          "type": "object",
          "default": {
            "search.exclude": {
              "**/node_modules": true,
              "**/dist": true,
              "**/coverage": true,
              "**/.sf": true,
              "**/.sfdx": true
            },
            "files.exclude": {
              "**/.sf": true,
              "**/.sfdx": true
            },
            "salesforcedx-vscode-core.push-or-deploy-on-save.enabled": false,
            "editor.formatOnSave": true
          },
          "description": "Template for .vscode/settings.json"
        }
      }
    },
    "commands": [
      {
        "command": "sf-preflight.checkEnvironment",
        "title": "SF Preflight: Check Environment Health",
        "shortTitle": "Check Environment",
        "icon": "$(heart)"
      },
      {
        "command": "sf-preflight.checkJava",
        "title": "SF Preflight: Check Java Installation",
        "shortTitle": "Check Java",
        "icon": "$(symbol-method)"
      },
      {
        "command": "sf-preflight.checkSalesforceCLI",
        "title": "SF Preflight: Check Salesforce CLI",
        "shortTitle": "Check SF CLI",
        "icon": "$(cloud)"
      },
      {
        "command": "sf-preflight.checkNodeJS",
        "title": "SF Preflight: Check Node.js Installation",
        "shortTitle": "Check Node.js",
        "icon": "$(symbol-event)"
      },
      {
        "command": "sf-preflight.showProjectInfo",
        "title": "SF Preflight: Show Project Info",
        "shortTitle": "Project Info",
        "icon": "$(info)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "sf-preflight.showProjectInfo",
          "when": "sfdx:project_opened"
        }
      ]
    }
  }
}
